{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // module import時のコンパイルエラー回避のために追加した
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true // fastify plugin 使用のため追加
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "server/index.ts", "server/index.ts", "server/server.js"],
  "exclude": ["node_modules", ".next"]
}
